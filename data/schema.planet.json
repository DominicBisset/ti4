{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://ti4.dominicbisset.co.uk/data/schema.planet.json",
    "title": "TI4 JSON Planet",
    "description": "Schema for representing TI4 planets",
    "type":"object",
    "properties":{
        "name":{
            "description":"Name of planet",
            "type":"string"
        },
        "trait":{
            "description": "Type of planet",
            "enum": [
                "Home",
                "Cultural",
                "Hazardous",
                "Industrial",
                "Other"
            ]
        },
        "race":{
            "description": "Race for which this planet is a Home planet",
            "$ref": "https://ti4.dominicbisset.co.uk/data/schema.raceName.json"
        },
        "resources":{
            "description":"Number of resources the planet produces",
            "type":"integer"
        },
        "influence":{
            "description":"Amount of influence generated by planet",
            "type":"integer"
        },
        "techSpeciality":{
            "description":"Type of technology that this planet can be exhausted to help satisfy a prerequisite for.",
            "enum":[
                "None",
                "Biotic",
                "Warfare",
                "Propulsion",
                "Cybernetic"
            ]
        }
    },
    "required": [
        "name",
        "trait",
        "resources",
        "influence",
        "techSpeciality"
    ]
}